<% include ../partials/header %>

    <div class="container">
        <% if(!campground) { %>
            <h4>Campground does not appear to exist. <a href="/campgrounds/">Return to List</a></h4>
            <% } else { %>

                <div class="row">
                    <div class="col-md-3">
                        <p class="lead">StUtS</p>
                        <div class="list-group">
                            <li class="list-group-item active">Summary</li>
                            <li class="list-group-item">Location</li>
                            <li class="list-group-item">Reserve</li>
                        </div>
                    </div>
                    <div class="col-md-9">
                        <div class="thumbnail">
                            <img class="img-responsive" src=<%=campground.image%>>
                            <div class="caption">
                                <h4 class="pull-right">$25/night</h4>
                                <h4>
                                    <%= campground.name %>
                                </h4>
                                <p>
                                    <%= campground.description %>
                                </p>
                                <p>
                                    <em>Submitted by <%= campground.author.username %></em>
                                </p>
                                <a href="/campgrounds/<%=campground._id%>/edit" class="btn btn-warning">Edit</button></a>
                            </div>
                            <div class="well">
                                <div class="text-right">
                                    <a href="/campgrounds/<%=campground._id%>/comments/new" class="btn btn-primary">Add a Comment</a>
                                </div>
                                <hr>
                                <div class="row">
                                    <div class="col-md-12">
                                        <% campground.comments.forEach(function(comment) { %>
                                            <strong><%=comment.author.username%></strong>
                                            <span class="pull-right">3 weeks ago</span>
                                            <p>
                                                <%= comment.text %>
                                            </p>
                                            <% }) %>
                                    </div>
                                </div>
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div>


                <% } %>
    </div>

    <% include ../partials/footer %>