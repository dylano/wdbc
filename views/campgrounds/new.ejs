<% include ../partials/header %>

    <div class="container">
        <div class="center">
            <h1>Add a new site</h1>
        </div>
        <div class="row">
            <div class="siteform">
                <form method='POST' action='/campgrounds'>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[name]" placeholder="site name" autofocus>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[image]" placeholder="site image URL">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="camp[description]" placeholder="description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-default btn-primary btn-block">Add Site</button>
                    </div>
                </form>
                <a href="/campgrounds">Or don't</a>
            </div>
        </div>
    </div>
    <% include ../partials/footer %>